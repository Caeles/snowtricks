{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau trick - Snowtricks{% endblock %}

{% block body %}
<section class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            {% for flash_error in app.flashes('error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            {% for flash_success in app.flashes('success') %}
                <div class="alert alert-success" role="alert">{{ flash_success }}</div>
            {% endfor %}
            
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">Ajouter un nouveau trick</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.category) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.images) }}
                        <small class="form-text text-muted">Vous pouvez sélectionner plusieurs images à la fois (jusqu'à 5 Mo chacune).</small>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.videoUrl) }}
                        <small class="form-text text-muted">Saisissez l'URL de la vidéo (YouTube, Vimeo, etc.).</small>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Créer le trick</button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
