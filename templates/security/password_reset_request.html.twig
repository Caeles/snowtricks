{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Réinitialisation de mot de passe</h4>
                </div>
                <div class="card-body p-4">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    <p class="text-muted mb-4">Veuillez saisir votre adresse email pour recevoir un lien de réinitialisation de mot de passe.</p>
                    
                    {{ form_start(emailForm) }}
                        <div class="mb-3">
                            {{ form_label(emailForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(emailForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre adresse email'}}) }}
                            {{ form_errors(emailForm.email) }}
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Envoyer le lien de réinitialisation</button>
                        </div>
                    {{ form_end(emailForm) }}
                    
                    <div class="mt-3 text-center">
                        <a href="{{ path('login') }}" class="text-decoration-none">Retour à la connexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
    