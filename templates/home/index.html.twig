{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Accueil{% endblock %}

{% block body %}
<style>
    *{
        margin: 0;
        padding: 0;
    }
    .background-image {
        background-image: url('{{ asset('images/homepage.jpeg') }}');
        background-size: cover;
        background-position: center;
        height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
        position: relative;
        overflow: hidden;
    }
    .background-image h1 {
        font-size: 3.5rem;
    }
    .arrow_down {
        margin-top: 100px;
        color: white;
        font-size: 40px;
        
    }
.image_rectangulaire {
  position: relative;
  width: 100%;            
  height: 200px;    
  overflow: hidden;        
}

.image_rectangulaire_img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;      
  object-position: center center;
}
</style>

<div class="background-image">
    <h1 class="display-2 text-center">Bienvenue dans notre communauté!</h1>
    <a href="#contenu" class="arrow_down">
        <i class='bx bx-chevron-down'></i>
    </a>
</div>

<div id="contenu" class="container py-4">
    <h1 class="text-center mb-4">Figures snowtricks</h1>

    <div class="container">
        <div class="row">
            {% if tricks is defined and tricks|length > 0 %}
                {% for trick in tricks %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="image_rectangulaire">
                                {% if trick.imageFilename is defined and trick.imageFilename %}
                                    <img src="{{ asset('images/tricks/' ~ trick.imageFilename) }}" class="image_rectangulaire_img" alt="{{ trick.name }}">
                                {% else %}
                                    <img src="{{ asset('images/no-image.jpg') }}" class="image_rectangulaire_img" alt="Image par défaut">
                                {% endif %}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">{{ trick.name|default('Sans nom') }}</h5>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a href="{{ path('app_trick_show', {'slug': trick.slug}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                    <div>
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.id == trick.author.id %}
                                            <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}" class="text-primary me-2"><i class='bx bx-edit'></i></a>
                                            <a href="{{ path('app_trick_delete', {'slug': trick.slug}) }}" class="text-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer?')"><i class='bx bx-trash'></i></a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12 text-center">
                    <p>Aucune figure disponible pour le moment.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
